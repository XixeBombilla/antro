<div class="block" id="block-text">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li class="active"><%= link_to 'Todos', fotos_path %></li>
			<li><%= link_to 'Nueva Foto', new_foto_path %></li>
		</ul>
	</div>
	<div class="content">
		<h2>Lista de Fotos</h2>
		<div class="inner">
			
                       <table class="table">
			 <tr>
			  <th>Imagen</th>
			  <th>Titulo</th>
			  <th>Acciones</th>
			</tr>
		      
		      <% @fotos.each do |foto| %>
			<tr  class="<%= cycle("even", "odd") %>">
			      <td><%= image_tag foto.imagen.url(:thumb) %></td>
			  <td><%=h link_to  foto.titulo,foto %></td>
			  <td>
			  <%= link_to 'Editar', edit_foto_path(foto) %>
			  <%= link_to 'Eliminar', foto, :confirm => 'Estas Seguro?', :method => :delete %></td>
			</tr>
		      <% end %>
		      </table>
                      
                     
			<br />


		</div>
	</div>
</div>

